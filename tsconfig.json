{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    ".pnpm-store",
    "dist",
    ".github",
    ".gitignore",
  ]
}
